<Page
    x:Class="VisualizationPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:a="using:AudioVisualizer"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="Black" Padding="40,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <CommandBar Grid.Row="0" Background="Transparent" RequestedTheme="Dark">
            <AppBarButton Icon="OpenFile" Click="OpenFile_Click"></AppBarButton>
        </CommandBar>
        <Grid Grid.Row="1">
            <a:CustomVisualizer Grid.Column="1" Grid.Row="1" x:Name="visualizer" Draw="visualizer_Draw" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></a:CustomVisualizer>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Slider BorderBrush="White" BorderThickness="1" Padding="4" Margin="4" Header="Play position:" Width="300" Orientation="Horizontal" x:Name="seekBar" ValueChanged="seekBar_ValueChanged"></Slider>
        </StackPanel>

    </Grid>
</Page>
