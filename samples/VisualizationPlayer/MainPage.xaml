<Page
    x:Class="VisualizationPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:a="using:AudioVisualizer"
    xmlns:local="using:VisualizationPlayer"
    mc:Ignorable="d" Loaded="Page_Loaded">
    <NavigationView x:Name="navView" IsPaneOpen="True" SelectionChanged="navView_SelectionChanged" Header="{x:Bind Player}">
        <NavigationView.HeaderTemplate>
            <DataTemplate x:DataType="local:PlayerService">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="20,0" Text="{x:Bind Title,Mode=OneWay}"></TextBlock>
                </Grid>
            </DataTemplate>
        </NavigationView.HeaderTemplate>
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Player" Tag="VisualizationPlayer.PlayerPage">
            </NavigationViewItem>
            <NavigationViewItem Content="Spectrum" Tag="VisualizationPlayer.SpectrumPage">
                
            </NavigationViewItem>
            <NavigationViewItem Content="Information" Tag="VisualizationPlayer.InformationPage">
            </NavigationViewItem>
        </NavigationView.MenuItems>
        <NavigationView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Frame Grid.Row="0" x:Name="ContentFrame">
                </Frame>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Slider x:Name="seekSlider" Grid.Row="0" Orientation="Horizontal" Margin="40,5" ValueChanged="seekSlider_ValueChanged" ></Slider>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
                        <a:CustomVisualizer x:Name="PositionDisplay" Height="50" Width="250" Draw="PositionDisplay_Draw"></a:CustomVisualizer>
                        <AppBarButton Icon="Play" Click="PlayButton_Click"></AppBarButton>
                        <AppBarButton Icon="Pause" Click="StopButton_Click" ></AppBarButton>
                        <AppBarButton Icon="OpenFile" Click="OpenFile_Click"></AppBarButton>
                    </StackPanel>
                </Grid>
            </Grid>
        </NavigationView.Content>
    </NavigationView>
</Page>
